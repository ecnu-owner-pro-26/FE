.card-container {
  background: #ffffff;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 16rpx;
  border-left: 8rpx solid #a41f35; /* 华师大红侧边条 */
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.loc-tag {
  color: #a41f35;
  font-size: 24rpx;
  font-weight: bold;
}

.time-text {
  color: #999999;
  font-size: 22rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 12rpx;
}

.card-content {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.image-preview {
  margin-top: 20rpx;
  position: relative;
  width: 240rpx;
  height: 180rpx;
}

.image-preview image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.img-count {
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
  background: rgba(0,0,0,0.6);
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 10rpx;
  border-radius: 4rpx;
}

.card-footer {
  margin-top: 24rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.stat-item {
  font-size: 24rpx;
  color: #888888;
  margin-right: 30rpx;
}

.ip-tag {
  font-size: 22rpx;
  color: #bbbbbb;
}