.container { height: 100vh; display: flex; flex-direction: column; }
.main-map { width: 100%; flex: 1; position: relative; }

/* 导航盒定位 */
.nav-box { position: absolute; left: 30rpx; bottom: 60rpx; z-index: 100; }
.main-btn { 
  background: #a41f35; color: #fff; padding: 20rpx 40rpx; 
  border-radius: 40rpx; font-weight: bold; box-shadow: 0 4rpx 15rpx rgba(0,0,0,0.3);
}

/* 菜单面板 */
.menu { 
  background: rgba(255, 255, 255, 0.95); width: 300rpx; 
  border-radius: 12rpx; padding: 10rpx; box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.2);
}
.m-tit { font-size: 22rpx; color: #999; padding: 10rpx; border-bottom: 1rpx solid #eee; }
.m-item { padding: 20rpx 10rpx; font-size: 28rpx; color: #333; border-bottom: 1rpx solid #f5f5f5; }
.m-item.dsh { color: #003366; }
.m-back { padding: 15rpx 10rpx; font-size: 24rpx; color: #a41f35; text-align: center; font-weight: bold; }

.m-scroll { max-height: 400rpx; }

/* 右侧发布 */
.btns-r { position: absolute; right: 30rpx; bottom: 60rpx; }
.circ { width: 90rpx; height: 90rpx; border-radius: 45rpx; display: flex; align-items: center; justify-content: center; font-size: 60rpx; }
.post { background: #a41f35; color: #fff; box-shadow: 0 4rpx 15rpx rgba(0,0,0,0.2); }