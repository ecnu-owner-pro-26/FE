page { background-color: #f7f7f7; }
.post-container { display: flex; flex-direction: column; height: 100vh; }

.nav-bar {
  height: 160rpx; background-color: #a41f35; display: flex;
  align-items: flex-end; padding: 0 30rpx 20rpx; position: relative;
}
.back-btn { color: #fff; font-size: 40rpx; margin-right: 30rpx; }
.nav-title { color: #fff; font-size: 32rpx; font-weight: bold; }

.content-body { padding: 30rpx; flex: 1; }

.text-area {
  width: 100%; height: 300rpx; background: #fff; border-radius: 12rpx;
  padding: 20rpx; box-sizing: border-box; font-size: 28rpx; margin-bottom: 30rpx;
}

.image-list { display: flex; flex-wrap: wrap; gap: 20rpx; }

.image-item { position: relative; width: 216rpx; height: 216rpx; }
.image-item image { width: 100%; height: 100%; border-radius: 8rpx; }

.del-icon {
  position: absolute; top: -10rpx; right: -10rpx; width: 40rpx; height: 40rpx;
  background: rgba(0,0,0,0.5); color: #fff; border-radius: 20rpx;
  text-align: center; line-height: 36rpx; font-size: 30rpx;
}

.add-box {
  width: 216rpx; height: 216rpx; background: #eee; border-radius: 8rpx;
  display: flex; align-items: center; justify-content: center;
}
.add-icon { font-size: 80rpx; color: #ccc; }

.footer { padding: 40rpx; }
.loc-tag { font-size: 24rpx; color: #888; text-align: center; margin-bottom: 20rpx; }
.submit-btn {
  background-color: #a41f35; color: #fff; border-radius: 50rpx;
  font-size: 32rpx; font-weight: bold; box-shadow: 0 10rpx 20rpx rgba(164,31,53,0.2);
}