.container {
  min-height: 100vh;
  background-color: #f8f8f8;
  padding-top: 20rpx;
}

.section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #eee;
}

.label { font-size: 30rpx; color: #333; min-width: 120rpx; }

.right-box { display: flex; align-items: center; }
.edit-avatar { width: 100rpx; height: 100rpx; border-radius: 50%; margin-right: 20rpx; }
.arrow { color: #ccc; font-size: 30rpx; }

.form-group { background: #fff; margin-top: 20rpx; }
.input-item {
  display: flex;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #eee;
  align-items: flex-start;
}

.field { flex: 1; font-size: 30rpx; }
.field-bio { flex: 1; font-size: 30rpx; height: 150rpx; }

.save-btn {
  margin: 60rpx 40rpx;
  background-color: #a41f35; /* 华师红 */
  color: #fff;
  border-radius: 44rpx;
  font-weight: normal;
}