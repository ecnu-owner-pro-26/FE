.container { height: 100vh; display: flex; flex-direction: column; }
.main-map { width: 100%; flex: 1; position: relative; }

.nav-box { position: absolute; left: 30rpx; bottom: 60rpx; z-index: 1000; }
.main-btn { 
  background: #a41f35; color: #fff; padding: 25rpx 50rpx; 
  border-radius: 50rpx; font-weight: bold; font-size: 32rpx;
  box-shadow: 0 4rpx 15rpx rgba(0,0,0,0.3);
}

.menu { 
  background: rgba(255, 255, 255, 0.98); width: 320rpx; 
  border-radius: 16rpx; padding: 10rpx; box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.2);
}
.m-tit { font-size: 24rpx; color: #888; padding: 15rpx; border-bottom: 1rpx solid #eee; }
.m-item { padding: 25rpx 15rpx; font-size: 30rpx; color: #333; border-bottom: 1rpx solid #f5f5f5; }
.m-back { padding: 20rpx; font-size: 26rpx; color: #a41f35; text-align: center; }

.center-marker {
  position: absolute; left: 50%; top: 50%;
  transform: translate(-50%, -100%);
  pointer-events: none;
  display: flex; flex-direction: column; align-items: center;
}
.marker-icon { width: 64rpx; height: 64rpx; }
.marker-label {
  background: rgba(164, 31, 53, 0.85); color: #fff;
  font-size: 20rpx; padding: 6rpx 16rpx; border-radius: 20rpx; margin-top: 10rpx;
}

.post-btn {
  position: absolute; right: 40rpx; bottom: 60rpx; z-index: 1000;
  width: 110rpx; height: 110rpx; background: #a41f35;
  border-radius: 50%; display: flex; align-items: center; justify-content: center;
  box-shadow: 0 6rpx 20rpx rgba(0,0,0,0.4);
}
.plus { color: #fff; font-size: 70rpx; font-weight: 200; margin-top: -8rpx; }