.message-container {
  min-height: 100vh;
  background-color: #fff;
  padding: 0 30rpx;
}

.msg-item {
  display: flex;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.avatar-box {
  width: 80rpx;
  height: 80rpx;
  background-color: #eee;
  border-radius: 50%;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.msg-content {
  flex: 1;
}

.msg-text {
  margin-bottom: 10rpx;
  font-size: 28rpx;
}

.user-name {
  font-weight: bold;
  color: #333;
  margin-right: 10rpx;
}

.action-text {
  color: #999;
}

.comment-bubble {
  background-color: #f8f8f8;
  padding: 15rpx 20rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
  margin: 10rpx 0;
}

.post-preview {
  font-size: 24rpx;
  color: #a41f35; /* 华师红：标志原文标题 */
  margin-bottom: 8rpx;
}

.msg-time {
  font-size: 22rpx;
  color: #ccc;
}

.empty-state {
  text-align: center;
  color: #ccc;
  padding-top: 200rpx;
  font-size: 28rpx;
}